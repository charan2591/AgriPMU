<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAgriculture"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="false"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cardUseCompatPadding="true"
            >

            <LinearLayout
                android:id="@+id/linrAgriculture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:background="@drawable/bg_menu_card"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/agriculture_icon"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="AGRICULTURE"
                    android:textSize="13sp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="false"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cardUseCompatPadding="true"
            >

            <LinearLayout
                android:id="@+id/linrHorticulture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/horticulture_icon"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="13sp"
                    android:text="HORTICULTURE"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="false"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cardUseCompatPadding="true"
            >

            <LinearLayout
                android:id="@+id/linrSericulture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/sericulture_icon"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="13sp"
                    android:text="SERICULTURE"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="false"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cardUseCompatPadding="true"
            >

            <LinearLayout
                android:id="@+id/linrAnimalHusbandry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/animals_icon"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="13sp"
                    android:text="ANIMAL HUSBANDRY"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="false"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cardUseCompatPadding="true"
            >

            <LinearLayout
                android:id="@+id/linrFisheries"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/fisheries_icon"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="13sp"
                    android:text="FISHERIES"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="false"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:layout_weight="1"
            android:layout_margin="3dp"
            app:cardUseCompatPadding="true"
            >

            <LinearLayout
                android:id="@+id/linrIrrigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/irrigation_icon"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="13sp"
                    android:text="IRRRIGATION"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>